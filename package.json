{
  "name": "ygqygq2-blog",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "next dev",
    "dev": "node scripts/generate-tags-dev.mjs && node scripts/copy-blog-assets-dynamic.mjs && cross-env NODE_ENV=development INIT_CWD=$PWD next dev",
    "check-mode": "node scripts/check-mode.mjs",
    "build": "pnpm run build:static",
    "build:static": "EXPORT=true STATIC_MODE=true bash scripts/build-wsl.sh",
    "build:dynamic": "cross-env NODE_ENV=production npm run check-mode && node scripts/run-build-dynamic.mjs",
    "serve": "npx serve out",
    "serve:dynamic": "cross-env NODE_ENV=production next start",
    "verify:dynamic": "node scripts/verify-build-dynamic.mjs",
    "analyze": "cross-env ANALYZE=true NODE_OPTIONS='--max_old_space_size=2048' next build",
    "lint": "eslint --fix app components layouts lib",
    "clean": "bash scripts/clean-cache.sh",
    "clean:safe": "rm -rf .next out && rm -f public/search.json app/tag-data.json",
    "postinstall": "simple-git-hooks",
    "preinstall": "npx only-allow pnpm"
  },
  "dependencies": {
    "@headlessui/react": "2.2.7",
    "@mdx-js/loader": "^3.1.0",
    "@mdx-js/mdx": "^3.1.0",
    "@mdx-js/react": "^3.1.0",
    "@next/bundle-analyzer": "15.5.0",
    "@next/mdx": "^15.5.0",
    "autoprefixer": "^10.4.21",
    "body-scroll-lock": "4.0.0-beta.0",
    "esbuild": "0.25.9",
    "fuse.js": "^7.1.0",
    "github-slugger": "^2.0.0",
    "gray-matter": "^4.0.3",
    "hast-util-from-html-isomorphic": "^2.0.0",
    "image-size": "2.0.2",
    "kbar": "0.1.0-beta.48",
    "next": "15.5.0",
    "next-themes": "^0.4.6",
    "postcss": "^8.5.6",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-markdown": "^10.1.0",
    "reading-time": "1.5.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-citation": "^2.3.1",
    "rehype-katex": "^7.0.1",
    "rehype-preset-minify": "7.0.1",
    "rehype-prism-plus": "^2.0.1",
    "rehype-slug": "^6.0.0",
    "remark": "^15.0.1",
    "remark-breaks": "^4.0.0",
    "remark-gfm": "^4.0.1",
    "remark-github-blockquote-alert": "^2.0.0",
    "remark-math": "^6.0.0",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@svgr/webpack": "^8.1.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4.1.12",
    "@tailwindcss/typography": "^0.5.16",
    "@types/mdx": "^2.0.13",
    "@types/node": "24.3.0",
    "@types/react": "^19.1.10",
    "@ygqygq2/eslint-config": "^1.0.3",
    "cross-env": "^10.0.0",
    "eslint": "^9.33.0",
    "eslint-config-next": "15.5.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "serve": "^14.2.4",
    "simple-git-hooks": "^2.13.1",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,mdx,css}": [
      "prettier --write"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "lint-staged"
  }
}
